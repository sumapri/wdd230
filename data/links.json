        ]
      },
      {
        "links": [
          { "url": "lesson10/weather.html", "title": "Weather API" }
        ]
      }
    ]
  };

  // Function to display the lesson links in a compact format
  function displayLessonLinks() {
    const linksContainer = document.getElementById('links');
    
    // Loop through the lessons array
    lessonsData.lessons.forEach((lesson, index) => {
      const lessonNumber = String(index + 1).padStart(2, '0'); // Format the number with leading zero (e.g., 01, 02)

      // Create a div to hold the lesson number and links
      const lessonDiv = document.createElement('div');
      
      // Start building the content for each lesson
      let lessonContent = `${lessonNumber}: `;

      // Add the links for each lesson
      lesson.links.forEach((link, linkIndex) => {
        lessonContent += `<a href="${link.url}" title="${link.title}">${link.title}</a>`;
        // Add a separator (" | ") unless it's the last link
        if (linkIndex < lesson.links.length - 1) {
          lessonContent += ' | ';
        }
      });

      // Insert the lesson content into the div
      lessonDiv.innerHTML = lessonContent;

      // Append the lessonDiv to the links container
      linksContainer.appendChild(lessonDiv);
    });
  }

  // Call the function to display the lesson links
  displayLessonLinks();
});



                 


