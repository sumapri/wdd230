          { "url": "lesson02/mediaquery.html", "title": "Media Queries" },
          { "url": "lesson02/design-principles.html", "title": "Design Principles Document" },
          { "url": "lesson02/design.html", "title": "Web Design Principles" }
        ]
      },
      {
        "links": [
          { "url": "images/css_combinators.png", "title": "CSS Combinators" },
          { "url": "https://codepen.io/sumapri/pen/JjgEZqr", "title": "CSS-Pseudo-Elements" },
          { "url": "https://codepen.io/sumapri/pen/YzmZeax", "title": "Responsive Menu" }
        ]
      },
      {
        "links": [
          { "url": "https://codepen.io/sumapri/pen/LYwWQrx", "title": "CSS Pseudo-Classes" }
        ]
      },
      {
